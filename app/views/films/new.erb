<nav>
  <a href="/">Home</a>
  <a href="/films/new" id="current">Post Film</a>
  <a href="/users/<%= current_user.username %>">Your Film's</a>
</nav>
<h2>Post Film</h2>
<% if flash[:message] %>
      <%= flash[:message] %>
  <% end %>
<form action="/films" method="post">
  <input type="text" name="title" id="title" placeholder="Enter Film Title"><br>
  <input type="number" name="year" id="year" placeholder="Enter Film Year"><br>
  <input type="text" name="genre" id="genre" placeholder="Enter Film Genre"><br>
  <select name="genre_id" id="genre">
   <% Genre.all.each do |genre| %>
       <option value="<%= genre.id %>"><%= genre.name %></option>
   <% end %>
 </select><br>
  <button type="submit">Post Film</button>
</form>
